<Button>
    font_size:32
    size_hint:(0.2,0.2)
    background_normal:""
    background_color:(0,0,0,1)

<MyLayout>
    BoxLayout:
        orientation:"vertical"
        size: root.width, root.height
        TextInput:
            id:calc_input
            multiline: False
            text: "0"
            halign: "right"
            font_size: 65
            background_normal:""
            background_color:(0,0,0,1)
            foreground_color:(1,1,1,1)
            size_hint:(1,0.15)
        GridLayout:
            cols: 4
            rows: 5
            #FILA
            Button:
                text:"%"
                on_press: root.operacion("%")
            Button:
                id:clear
                text:"C"
                on_press: root.clear()

            Button:
                text:u"\u00AB"
                on_press: root.eliminateLast()
            
            Button:
                text:"/"
                on_press: root.operacion("/")
            #FILA
            Button:
                text:"7"
                on_press: root.button_press(7)
                
            Button:
                text:"8"
                on_press: root.button_press(8)
                
            Button:
                text:"9"
                on_press: root.button_press(9)
                
            Button:
                text:"x"
                on_press: root.operacion("*")
            #FILA
            Button:
                text:"4"
                on_press: root.button_press(4)
            Button:
                text:"5"
                on_press: root.button_press(5)
            Button:
                text:"6"
                on_press: root.button_press(6)
            Button:
                text:"-"
                on_press: root.operacion("-")
            #FILA
            Button:
                text:"1"
                on_press: root.button_press(1)
            Button:
                text:"2"
                on_press: root.button_press(2)
            Button:
                text:"3"
                on_press: root.button_press(3)
            Button:
                text:"+"
                on_press: root.operacion("+")
            #FILA
            Button:
                text:"+/-"
                on_press: root.cambiarsigno()
            Button:
                text:"0"
                on_press: root.button_press(0)
            Button:
                text:"."
                on_press: root.decimal()
            Button:
                text:"="
                on_press: root.calcular()